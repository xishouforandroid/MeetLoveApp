<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="8.0dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="4.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingTop="4.0dip"
                    android:id="@+id/relate_notice"
                    android:background="@drawable/btn_white_shape"
                    android:layout_height="56.0dip">
        <ImageView
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="3dp"
                android:src="@drawable/logo_bordered_256w"
                android:id="@+id/notice_cover"/>

        <TextView
                android:id="@+id/notice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:textSize="10sp"
                android:background="@drawable/ease_unread_count_bg"
                />

        <TextView android:layout_width="wrap_content"
                  android:text="系统通知"
                  android:textSize="16.0dip"
                  android:gravity="center_vertical"
                  android:singleLine="true"
                  android:textColor="#ff595c61"
                  android:layout_marginLeft="8dp"
                  android:id="@+id/notice_title"
                  android:layout_toRightOf="@+id/notice_cover"
                  android:layout_marginTop="3dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:textColor="#c0c0c0"
                  android:textSize="14sp"
                  android:layout_below="@+id/notice_title"
                  android:id="@+id/notice_msg"
                  android:layout_toRightOf="@+id/notice_cover"
                  android:layout_marginTop="3dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="12sp"
                  android:id="@+id/notice_dateline"
                  android:textColor="#c0c0c0"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="6dp"
                  android:layout_marginRight="6dp"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>