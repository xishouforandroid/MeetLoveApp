<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top"/>

    <com.lbins.meetlove.widget.ReboundScrollView android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:id="@+id/top_cover"
                          android:background="@color/white"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:background="@color/white"
                              android:padding="10dp"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="138dp"
                            android:layout_height="138dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/default_cover1"
                            android:id="@+id/cover"
                            />
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:id="@+id/nickname"
                                  android:text="李灵黛"
                                  android:layout_centerHorizontal="true"
                                  android:textSize="32sp"
                                  android:textColor="@color/textColor"
                                  android:layout_marginTop="10dp"
                                  android:layout_height="wrap_content"/>
                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="15dp"
                                      android:id="@+id/liner_top"
                                      android:layout_marginLeft="15dp"
                                      android:layout_marginRight="15dp"
                                      android:layout_below="@+id/nickname"
                                      android:layout_height="wrap_content">
                            <TextView android:layout_width="0dp"
                                      android:text="单位推荐"
                                      android:layout_weight="1"
                                      android:id="@+id/is_tuijian"
                                      android:textColor="@color/main_color"
                                      android:layout_height="wrap_content"/>
                            <TextView android:layout_width="0dp"
                                      android:text="交往中"
                                      android:gravity="center|right"
                                      android:layout_weight="1"
                                      android:id="@+id/is_state"
                                      android:layout_alignParentRight="true"
                                      android:layout_below="@+id/nickname"
                                      android:textColor="@color/main_color"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_marginLeft="15dp"
                                  android:layout_marginRight="15dp"
                                  android:layout_marginTop="15dp"
                                  android:lines="2"
                                  android:text="个性签名：非诚勿扰非诚勿扰非诚勿扰非诚勿扰非诚勿扰非诚勿扰非诚勿扰"
                                  android:ellipsize="end"
                                  android:id="@+id/sign"
                                  android:lineSpacingMultiplier="1.2"
                                  android:textColor="@color/textColortwo"
                                  android:layout_below="@+id/liner_top"
                                  android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="@color/white"
                              android:layout_marginBottom="15dp"
                              android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="158dp"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="wrap_content">
                        <ImageView android:layout_width="18dp"
                                   android:id="@+id/vip_1"
                                   android:layout_marginLeft="8dp"
                                   android:src="@drawable/icon_verify_id_enabled"
                                   android:layout_height="18dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="认证"
                                  android:textSize="14sp"
                                  android:id="@+id/vip_2"
                                  android:layout_marginRight="8dp"
                                  android:layout_marginLeft="3dp"
                                  android:textColor="@color/main_color"
                                  android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="18dp"
                                   android:id="@+id/vip_3"
                                   android:layout_marginLeft="15dp"
                                   android:src="@drawable/icon_verify_honesty_enabled"
                                   android:layout_height="18dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="诚信"
                                  android:textSize="14sp"
                                  android:layout_marginLeft="3dp"
                                  android:id="@+id/vip_4"
                                  android:textColor="@color/main_color"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_marginRight="15dp"
                                  android:layout_marginLeft="15dp"
                                  android:layout_height="wrap_content">
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:id="@+id/age"
                                  android:textSize="14sp"
                                  android:text="1990年"
                                  android:textColor="@color/textColortwo"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:id="@+id/heightl"
                                  android:text="190CM"
                                  android:textSize="14sp"
                                  android:textColor="@color/textColortwo"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:id="@+id/address"
                                  android:text="沈阳市"
                                  android:textSize="14sp"
                                  android:textColor="@color/textColortwo"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <View android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_height="0.1dp"></View>

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:padding="8dp"
                              android:gravity="center_vertical"
                              android:background="@drawable/btn_dark_shape"
                              android:id="@+id/liner_photo"
                              android:layout_height="75dp">
                    <ImageView android:layout_width="35dp"
                               android:src="@drawable/icon_mine_photo"
                               android:layout_marginLeft="8dp"
                               android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="相册"
                              android:layout_marginLeft="15dp"
                              android:layout_gravity="center_vertical"
                              android:textColor="@color/text_color"
                              android:textSize="16sp"
                              android:layout_height="wrap_content"/>
                    <com.lbins.meetlove.widget.PictureGridview
                            android:id="@+id/gridview"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:layout_marginLeft="15dp"
                            android:horizontalSpacing="0dip"
                            android:numColumns="3"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="0dip"
                            />
                </LinearLayout>

            <View android:layout_width="match_parent"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_height="0.1dp"></View>

            <View android:layout_width="match_parent"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_marginTop="8dp"
                  android:layout_height="0.1dp"></View>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="10dp"
                          android:background="@drawable/btn_dark_shape"
                          android:id="@+id/liner_friends"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="35dp"
                           android:src="@drawable/icon_mine_dateprofile"
                           android:layout_marginLeft="8dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:text="选择交往对象"
                          android:drawableRight="@drawable/icon_small_list_more"
                          android:layout_marginLeft="15dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:id="@+id/jwdx_txt"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_height="0.1dp"></View>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="10dp"
                          android:background="@drawable/btn_dark_shape"
                          android:id="@+id/liner_rz"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="35dp"
                           android:src="@drawable/icon_mine_verify"
                           android:layout_marginLeft="8dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:text="认证"
                          android:drawableRight="@drawable/icon_small_list_more"
                          android:layout_marginLeft="15dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_height="0.1dp"></View>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="10dp"
                          android:background="@drawable/btn_dark_shape"
                          android:id="@+id/liner_share"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="35dp"
                           android:src="@drawable/icon_mine_share"
                           android:layout_marginLeft="8dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:text="分享"
                          android:drawableRight="@drawable/icon_small_list_more"
                          android:layout_marginLeft="15dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_height="0.1dp"></View>


            <View android:layout_width="match_parent"
                  android:layout_marginTop="8dp"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_height="0.1dp"></View>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="10dp"
                          android:background="@drawable/btn_dark_shape"
                          android:id="@+id/liner_set"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="35dp"
                           android:src="@drawable/icon_mine_setup"
                           android:layout_marginLeft="8dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:text="设置"
                          android:drawableRight="@drawable/icon_small_list_more"
                          android:layout_marginLeft="15dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:background="@color/sign_mood_nomal_0"
                  android:layout_marginBottom="15dp"
                  android:layout_height="0.1dp"></View>

        </LinearLayout>
    </com.lbins.meetlove.widget.ReboundScrollView>
</LinearLayout>