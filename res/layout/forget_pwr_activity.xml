<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top"/>
    <com.lbins.meetlove.widget.ReboundScrollView android:layout_width="match_parent"
                                                 android:layout_weight="1"
                                                 android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:weightSum="1"
                      android:layout_height="wrap_content">
            <EditText android:layout_width="match_parent"
                      android:textColor="@color/textColortwo"
                      android:textColorHint="@color/textColortwo"
                      android:hint="手机号"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:padding="10dp"
                      android:numeric="integer"
                      android:drawablePadding="15dp"
                      android:background="@drawable/icon_input_bg"
                      android:drawableLeft="@drawable/icon_input_phone"
                      android:id="@+id/mobile"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <EditText android:layout_width="wrap_content"
                          android:textColor="@color/textColortwo"
                          android:textColorHint="@color/textColortwo"
                          android:hint="验证码"
                          android:layout_marginTop="15dp"
                          android:layout_marginLeft="15dp"
                          android:layout_marginRight="15dp"
                          android:padding="10dp"
                          android:numeric="integer"
                          android:drawablePadding="15dp"
                          android:background="@drawable/icon_input_bg_short"
                          android:drawableLeft="@drawable/icon_input_verifycode"
                          android:id="@+id/card"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/pwr"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="15dp"
                        android:text="验证码"
                        android:textStyle="bold"
                        android:id="@+id/btn_card"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_short_active"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <EditText android:layout_width="match_parent"
                      android:textColor="@color/textColortwo"
                      android:textColorHint="@color/textColortwo"
                      android:hint="新密码"
                      android:password="true"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:padding="10dp"
                      android:drawablePadding="15dp"
                      android:background="@drawable/icon_input_bg"
                      android:drawableLeft="@drawable/icon_input_passwd"
                      android:id="@+id/pwr2"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:textColor="@color/textColortwo"
                      android:textColorHint="@color/textColortwo"
                      android:hint="再次输入"
                      android:password="true"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:padding="10dp"
                      android:drawablePadding="15dp"
                      android:background="@drawable/icon_input_bg"
                      android:drawableLeft="@drawable/icon_input_passwd"
                      android:id="@+id/pwr3"
                      android:layout_height="wrap_content"/>

            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="85dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="确定"
                    android:textStyle="bold"
                    android:id="@+id/btn_save"
                    android:textSize="16sp"
                    android:textColor="@color/textColortwo"
                    android:background="@drawable/btn_big_unactive"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.lbins.meetlove.widget.ReboundScrollView>

    <TextView android:layout_width="match_parent"
              android:text="联系我们"
              android:padding="15dp"
              android:id="@+id/btn_tel"
              android:gravity="center"
              android:textSize="16sp"
              android:textColor="@color/main_color"
              android:layout_height="wrap_content"/>

</LinearLayout>