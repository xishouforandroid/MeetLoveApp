<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top"/>

    <com.lbins.meetlove.widget.ReboundScrollView android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:background="@color/white"
                          android:layout_gravity="center"
                          android:padding="15dp"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="140dp"
                           android:id="@+id/idcard"
                           android:src="@drawable/bigpic_idcard"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textColor="@color/main_color"
                          android:textSize="16sp"
                          android:gravity="center"
                          android:text="请上传身份证照片，仅供审核使用"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <EditText android:layout_width="match_parent"
                      android:textColor="@color/textColortwo"
                      android:textColorHint="@color/textColortwo"
                      android:hint="李灵黛"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:padding="10dp"
                      android:editable="false"
                      android:drawablePadding="15dp"
                      android:background="@drawable/icon_input_bg"
                      android:drawableLeft="@drawable/icon_input_name"
                      android:id="@+id/nickname"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:textColor="@color/textColortwo"
                      android:textColorHint="@color/textColortwo"
                      android:hint="18954321658"
                      android:layout_marginTop="15dp"
                      android:layout_below="@+id/mobile"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:padding="10dp"
                      android:editable="false"
                      android:drawablePadding="15dp"
                      android:background="@drawable/icon_input_bg"
                      android:drawableLeft="@drawable/icon_input_phone"
                      android:id="@+id/mobile"
                      android:layout_height="wrap_content"/>

            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="身份已认证"
                    android:textStyle="bold"
                    android:id="@+id/btn_1"
                    android:textSize="16sp"
                    android:textColor="@color/textColortwo"
                    android:background="@drawable/btn_big_unactive"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="会员认证"
                    android:textStyle="bold"
                    android:id="@+id/btn_2"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_big_active"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="诚信认证"
                    android:textStyle="bold"
                    android:id="@+id/btn_3"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_big_active"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.lbins.meetlove.widget.ReboundScrollView>
</LinearLayout>