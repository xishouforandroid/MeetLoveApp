<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:layout_width="match_parent"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:layout_marginRight="15dp"
              android:layout_marginLeft="15dp"
              android:layout_toRightOf="@+id/back"
              android:singleLine="true"
              android:drawableLeft="@drawable/ease_search_bar_icon_normal"
              android:layout_toLeftOf="@+id/right_btn"
              android:padding="6dp"
              android:id="@+id/keywords"
              android:hint="手机号"
              android:paddingLeft="8dp"
              android:background="@drawable/et_bule_radio_bg"
              android:textSize="15sp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:paddingRight="12dp"
              android:textColor="@color/text_color"
              android:imeOptions="actionSearch"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:background="@color/bg_gray"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="1dp"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:layout_height="40dp">
        <TextView android:layout_width="70dp"
                  android:text="年龄"
                  android:textSize="15sp"
                  android:layout_marginLeft="15dp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:drawablePadding="8dp"
                  android:layout_marginRight="15dp"
                  android:textSize="15sp"
                  android:id="@+id/age"
                  android:drawableRight="@drawable/icon_small_list_more"
                  android:gravity="right|center_vertical"
                  android:textColor="@color/text_color"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/bg_gray"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="1dp"
                  android:gravity="center_vertical"
                  android:background="@color/white"
                  android:layout_height="40dp">
        <TextView android:layout_width="70dp"
                  android:text="身高"
                  android:textSize="15sp"
                  android:layout_marginLeft="15dp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:textSize="15sp"
                  android:drawableRight="@drawable/icon_small_list_more"
                  android:layout_marginRight="15dp"
                  android:id="@+id/heightl"
                  android:drawablePadding="8dp"
                  android:gravity="right|center_vertical"
                  android:textColor="@color/text_color"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/bg_gray"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="1dp"
                  android:gravity="center_vertical"
                  android:background="@color/white"
                  android:layout_height="40dp">
        <TextView android:layout_width="70dp"
                  android:text="学历"
                  android:layout_marginLeft="15dp"
                  android:textSize="15sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:textSize="15sp"
                  android:drawableRight="@drawable/icon_small_list_more"
                  android:id="@+id/education"
                  android:layout_marginRight="15dp"
                  android:drawablePadding="8dp"
                  android:gravity="right|center_vertical"
                  android:textColor="@color/text_color"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/bg_gray"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="1dp"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:layout_height="40dp">
        <TextView android:layout_width="70dp"
                  android:text="婚姻状况"
                  android:layout_marginLeft="15dp"
                  android:textSize="15sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:textSize="15sp"
                  android:id="@+id/marragie"
                  android:drawablePadding="8dp"
                  android:drawableRight="@drawable/icon_small_list_more"
                  android:gravity="right|center_vertical"
                  android:layout_marginRight="15dp"
                  android:textColor="@color/text_color"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/bg_gray"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="1dp"
                  android:gravity="center_vertical"
                  android:background="@color/white"
                  android:layout_height="40dp">
        <TextView android:layout_width="70dp"
                  android:text="兴趣爱好"
                  android:layout_marginLeft="15dp"
                  android:textSize="15sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:drawableRight="@drawable/icon_small_list_more"
                  android:id="@+id/likes"
                  android:textSize="15sp"
                  android:layout_marginRight="15dp"
                  android:drawablePadding="8dp"
                  android:gravity="right|center_vertical"
                  android:textColor="@color/text_color"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/bg_gray"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_height="0.1dp"></View>

    <Button android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_below="@+id/pwr"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="查找"
            android:textStyle="bold"
            android:id="@+id/btn_login"
            android:textSize="16sp"
            android:textColor="@color/textColortwo"
            android:background="@drawable/btn_big_unactive"
            android:layout_height="wrap_content"/>
</LinearLayout>