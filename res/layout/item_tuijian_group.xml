<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="3dp"
              android:background="@drawable/btn_white_shape"
              android:layout_height="wrap_content">
    <com.lbins.meetlove.widget.RoundImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:src="@drawable/default_read_book"
            android:id="@+id/item_cover"/>
    <TextView android:layout_width="wrap_content"
              android:text="读书群"
              android:textColor="@color/textColor"
              android:textSize="15sp"
              android:layout_centerVertical="true"
              android:id="@+id/nickname"
              android:layout_toRightOf="@+id/item_cover"
              android:layout_marginTop="8dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="书籍至最有耐心 最能忍耐和最令人愉快的伙伴 这里有爱好读书的一群人"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="35dp"
              android:layout_centerVertical="true"
              android:textColor="@color/textColortwo"
              android:textSize="12sp"
              android:id="@+id/state"
              android:layout_toRightOf="@+id/nickname"
              android:layout_marginTop="6dp"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/icon_small_list_more"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="15dp"
               android:layout_height="wrap_content"/>
</RelativeLayout>