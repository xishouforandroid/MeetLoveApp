            <com.lbins.meetlove.widget.ReboundScrollView android:layout_width="match_parent"
                                                         android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_height="match_parent">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:layout_height="0dp">
                        <RelativeLayout android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:background="@color/white"
                                        android:layout_height="match_parent">
                            <com.lbins.meetlove.widget.PictureGridview
                                    android:id="@+id/gridView1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:horizontalSpacing="0dp"
                                    android:gravity="center"
                                    android:numColumns="2"
                                    android:stretchMode="columnWidth"
                                    android:verticalSpacing="0dip"
                                    />
                            <TextView android:layout_width="wrap_content"
                                      android:text="更多"
                                      android:layout_alignParentRight="true"
                                      android:layout_marginRight="12dp"
                                      android:layout_below="@+id/gridView1"
                                      android:layout_marginBottom="6dp"
                                      android:gravity="right"
                                      android:layout_marginTop="3dp"
                                      android:id="@+id/btn_one"
                                      android:textSize="14sp"
                                      android:textColor="@color/main_color"
                                      android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_centerInParent="true"
                                  android:lineSpacingMultiplier="1.4"
                                  android:textColor="@color/text_color"
                                  android:textSize="16sp"
                                  android:layout_centerHorizontal="true"
                                  android:layout_centerVertical="true"
                                  android:visibility="gone"
                                  android:id="@+id/no_data"
                                  android:gravity="center_horizontal"
                                  android:text="您好，暂时没有符合您要求的会员可以推荐\n请您点击搜索按钮浏览更多会员\n祝您早日遇到真爱，找到幸福！"
                                  android:layout_height="wrap_content"/>
                    </RelativeLayout>


                    <RelativeLayout android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginTop="8dp"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@color/white"
                                    >
                        <com.lbins.meetlove.widget.PictureGridview
                                android:id="@+id/gridView2"
                                android:layout_centerHorizontal="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:horizontalSpacing="0dp"
                                android:gravity="center"
                                android:numColumns="2"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="0dip"
                                />
                        <TextView android:layout_width="wrap_content"
                                  android:text="更多"
                                  android:layout_alignParentRight="true"
                                  android:layout_marginRight="12dp"
                                  android:layout_below="@+id/gridView2"
                                  android:layout_marginBottom="6dp"
                                  android:gravity="right"
                                  android:id="@+id/btn_two"
                                  android:layout_marginTop="3dp"
                                  android:textSize="14sp"
                                  android:textColor="@color/main_color"
                                  android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.lbins.meetlove.widget.ReboundScrollView>

</LinearLayout>