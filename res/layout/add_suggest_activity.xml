<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top"/>

    <com.lbins.meetlove.widget.ReboundScrollView android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:text="反馈内容"
                      android:padding="12dp"
                      android:textSize="14sp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/panel_aleart_bg"
                    android:textSize="16sp"
                    android:gravity="top"
                    android:hint="请输入"
                    android:padding="10dp"
                    android:textColor="#ff000000"/>

            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="提交"
                    android:textStyle="bold"
                    android:id="@+id/btn_1"
                    android:textSize="16sp"
                    android:textColor="@color/textColortwo"
                    android:background="@drawable/btn_big_unactive"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.lbins.meetlove.widget.ReboundScrollView>
</LinearLayout>