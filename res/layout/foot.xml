<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="60dp">

    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_one"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
        <Button
                android:id="@+id/foot_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/tabicon_recommand_p"
                android:onClick="onTabClicked"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/foot_liner_two"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="match_parent">
        <Button
                android:id="@+id/foot_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/tabicon_msg"
                android:onClick="onTabClicked"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/ease_unread_count_bg"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                />
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_three"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
        <Button
                android:id="@+id/foot_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/tabicon_contact"
                android:onClick="onTabClicked"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/unread_address_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/ease_unread_count_bg"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                 />
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/foot_liner_four"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="match_parent">
        <Button
                android:id="@+id/foot_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/tabicon_mine"
                android:onClick="onTabClicked"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>