<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top"/>

    <com.lbins.meetlove.widget.ReboundScrollView android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/bigpic_verify_honesty"
                       android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:textColor="@color/textColor"
                      android:text="会员服务费 120元/年"
                      android:layout_marginTop="35dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:background="@drawable/icon_input_bg"
                      android:drawableLeft="@drawable/icon_checkbox_checked"
                      android:id="@+id/nickname"
                      android:layout_height="wrap_content"/>

            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="微信支付"
                    android:textStyle="bold"
                    android:id="@+id/btn_1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_big_active"
                    android:layout_height="wrap_content"/>

            <Button android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/pwr"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="支付宝支付"
                    android:textStyle="bold"
                    android:id="@+id/btn_2"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_big_active"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.lbins.meetlove.widget.ReboundScrollView>
</LinearLayout>